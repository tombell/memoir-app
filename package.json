{
  "name": "memoir-app",
  "private": true,
  "devDependencies": {
    "@rollup/plugin-commonjs": "^12.0.0",
    "@rollup/plugin-node-resolve": "^8.0.1",
    "@rollup/plugin-replace": "^2.3.3",
    "@rollup/pluginutils": "^3.1.0",
    "@typescript-eslint/eslint-plugin": "^2.34.0",
    "@typescript-eslint/parser": "^2.34.0",
    "eslint": "^7.2.0",
    "eslint-config-airbnb-typescript": "^7.2.1",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.20.0",
    "eslint-plugin-react-hooks": "^2.3.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.9",
    "minimist": ">=1.2.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5",
    "rollup": "^2.13.1",
    "rollup-plugin-serve": "^1.0.1",
    "rollup-plugin-terser": "^6.1.0",
    "rollup-plugin-typescript2": "^0.27.1",
    "sass": "^1.26.8",
    "stylelint": "^13.6.0",
    "stylelint-config-recommended-scss": "^4.2.0",
    "stylelint-order": "^4.1.0",
    "stylelint-scss": "^3.17.2",
    "typescript": "^3.9.5"
  },
  "dependencies": {
    "memoir-api": "^0.0.5",
    "preact": "^10.4.4",
    "preact-router": "^3.2.1"
  },
  "scripts": {
    "start": "npm-run-all --parallel watch:styles watch:scripts",
    "watch:styles": "sass --watch src/styles/styles.scss public/styles.css",
    "watch:scripts": "rollup -c -w",
    "build": "npm-run-all build:styles build:scripts",
    "build:styles": "sass -s compressed src/styles/styles.scss public/styles.css",
    "build:scripts": "BUILD=production rollup -c",
    "lint": "npm-run-all lint:styles lint:scripts",
    "lint:styles": "stylelint src/styles/**",
    "lint:scripts": "eslint --ext .ts,.tsx src",
    "archive": "tar zcvf /tmp/memoir-app.tar.gz public Caddyfile"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{ts,tsx,js,jsx}": "prettier --write"
  }
}
