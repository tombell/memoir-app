{
  "name": "memoir-app",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "storybook": "storybook dev -p 6006 --no-open",
    "lint": "eslint .storybook src test",
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "prepare": "husky"
  },
  "dependencies": {
    "@preact/preset-vite": "^2.8.1",
    "@preact/signals": "^1.2.2",
    "@storybook/addon-a11y": "^7.6.15",
    "@storybook/addon-actions": "^7.6.15",
    "@storybook/addon-controls": "^7.6.15",
    "@storybook/addon-measure": "^7.6.15",
    "@storybook/addon-outline": "^7.6.15",
    "@storybook/addon-viewport": "^7.6.15",
    "@storybook/preact": "^7.6.15",
    "@storybook/preact-vite": "^7.6.15",
    "@testing-library/preact": "^3.2.3",
    "@testing-library/user-event": "^14.5.2",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/node": "^20.11.17",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitest/coverage-v8": "^1.2.2",
    "autoprefixer": "^10.4.17",
    "eslint": "^8.56.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^17.1.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-storybook": "^0.6.15",
    "eslint-plugin-vitest": "^0.3.22",
    "happy-dom": "^13.3.8",
    "husky": "^9.0.119.0.10",
    "jsdom": "^24.0.0",
    "lint-staged": "^15.2.2",
    "postcss": "^8.4.35",
    "preact": "^10.19.4",
    "preact-router": "^4.1.2",
    "prettier": "^3.2.5",
    "prettier-plugin-tailwindcss": "^0.5.11",
    "storybook": "^7.6.15",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.3",
    "vite": "^5.1.2",
    "vite-tsconfig-paths": "^4.3.1",
    "vitest": "^1.2.2"
  },
  "lint-staged": {
    "**/*.{ts,tsx,js,jsx,cjs}": [
      "prettier --write"
    ]
  },
  "prettier": {
    "plugins": [
      "@trivago/prettier-plugin-sort-imports"
    ],
    "importOrder": [
      "<BUILTIN_MODULES>",
      "<THIRD_PARTY_MODULES>",
      "^@pages/(.*)$",
      "^@components/(.*)$",
      "^@services/(.*)$",
      "^@hooks/(.*)$",
      "^@test/(.*)$",
      "^[./]"
    ],
    "importOrderSeparation": true,
    "importOrderSortSpecifiers": true
  }
}
