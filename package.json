{
  "name": "memoir-app",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "vitest",
    "lint": "prettier --check . && eslint .",
    "format": "prettier --write .",
    "storybook": "storybook dev -p 6006 --no-open",
    "build-storybook": "storybook build",
    "prepare": "husky"
  },
  "dependencies": {
    "@biomejs/biome": "^1.8.3",
    "@preact/preset-vite": "2.8.1",
    "@preact/signals": "1.2.2",
    "@storybook/addon-a11y": "^8.2.2",
    "@storybook/addon-actions": "^8.2.2",
    "@storybook/addon-controls": "^8.2.2",
    "@storybook/addon-measure": "^8.2.2",
    "@storybook/addon-outline": "^8.2.2",
    "@storybook/addon-viewport": "^8.2.2",
    "@storybook/preact": "^8.2.2",
    "@storybook/preact-vite": "^8.2.2",
    "@testing-library/preact": "3.2.4",
    "@testing-library/user-event": "14.5.2",
    "@trivago/prettier-plugin-sort-imports": "4.3.0",
    "@typescript-eslint/eslint-plugin": "7.1.1",
    "@typescript-eslint/parser": "7.1.1",
    "autoprefixer": "10.4.19",
    "eslint": "8.57.0",
    "eslint-config-airbnb": "19.0.4",
    "eslint-config-airbnb-typescript": "18.0.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-react": "7.34.0",
    "eslint-plugin-react-hooks": "4.6.0",
    "eslint-plugin-storybook": "0.8.0",
    "eslint-plugin-vitest": "0.3.22",
    "happy-dom": "13.6.2",
    "husky": "9.0.11",
    "lint-staged": "15.2.2",
    "postcss": "8.4.35",
    "preact": "10.19.6",
    "preact-router": "4.1.2",
    "prettier": "3.2.5",
    "prettier-plugin-tailwindcss": "0.5.11",
    "storybook": "^8.2.2",
    "tailwindcss": "3.4.1",
    "typescript": "5.3.3",
    "vite": "5.1.5",
    "vite-tsconfig-paths": "4.3.1",
    "vitest": "1.3.1"
  },
  "lint-staged": {
    "*.{cjs,js,ts,jsx,tsx,html,md,json,css}": [
      "prettier --write"
    ]
  },
  "prettier": {
    "plugins": [
      "@trivago/prettier-plugin-sort-imports",
      "prettier-plugin-tailwindcss"
    ],
    "importOrder": [
      "<THIRD_PARTY_MODULES>",
      "^\\$pages/(.*)$",
      "^\\$components/(.*)$",
      "^\\$services/(.*)$",
      "^\\$hooks/(.*)$",
      "^\\$test/(.*)$",
      "^[./]"
    ],
    "importOrderSeparation": true,
    "importOrderSortSpecifiers": true
  }
}
