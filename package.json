{
  "name": "memoir-app",
  "private": true,
  "scripts": {
    "start": "tsc --noEmit && node src/esbuild.mjs",
    "build": "tsc --noEmit && node src/esbuild.mjs --build",
    "lint": "eslint --ext .ts,.tsx src",
    "storybook": "start-storybook -p 6006 -s public,.storybook/public",
    "prepare": "husky install"
  },
  "dependencies": {
    "@babel/core": "^7.17.10",
    "@storybook/addon-actions": "^6.4.22",
    "@storybook/addon-essentials": "^6.4.22",
    "@storybook/addon-links": "^6.4.22",
    "@storybook/addon-postcss": "^2.0.0",
    "@storybook/preact": "^6.4.22",
    "@typescript-eslint/eslint-plugin": "^5.23.0",
    "@typescript-eslint/parser": "^5.23.0",
    "babel-loader": "^8.2.5",
    "babel-plugin-module-resolver": "^4.1.0",
    "babel-preset-preact": "^2.0.0",
    "esbuild": "^0.14.38",
    "esbuild-style-plugin": "^1.5.1",
    "eslint": "^8.14.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-react": "^7.29.4",
    "eslint-plugin-react-hooks": "^4.5.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.4.1",
    "preact": "^10.7.1",
    "preact-router": "^4.0.1",
    "prettier": "^2.6.2",
    "rustywind": "^0.15.0",
    "storybook-addon-mock": "^2.3.2",
    "tailwindcss": "^3.0.24",
    "typescript": "^4.6.4"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx,js,jsx}": [
      "rustywind --write",
      "prettier --write"
    ]
  }
}
